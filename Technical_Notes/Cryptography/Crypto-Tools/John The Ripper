$1$ – MD5 crypt
$2a$ – bcrypt
$2b$ – bcrypt
$2y$ – bcrypt
$5$ – SHA-256 crypt
$6$ – SHA-512 crypt
$argon2i$ – Argon2
$argon2id$ – Argon2

hashid -j <HASH>

*2john TYPES:
1)zip2john file.zip > zip.hash
john zip.hash

2)rar2john file.rar > rar.hash
john rar.hash

3)ssh2john id_rsa > ssh.hash
john ssh.hash

4)pdf2john file.pdf > pdf.hash
john pdf.hash



