./manspider.sh 10.129.234.121 \
 -u mendres \
 -p 'Inlanefreight2025!' \
 -c passw

export SPIDER_PASS='Inlanefreight2025!'
./manspider.sh 10.129.234.121 \
 -u mendres \
 -p "$SPIDER_PASS" \
 -c 'pass,cred,token'

# Netexec

nxc smb 10.129.234.121 -u mendres -p 'Inlanefreight2025!' --spider IT --content --pattern "passw"

nxc smb 10.129.234.121 \
  -u 'mendres' \
  -p 'Inlanefreight2025!' \
  --spider 'IT' \
  --content \
  --pattern '(?i)passw'

nxc smb 10.129.234.121 \
  -u mendres \
  -p 'Inlanefreight2025!' \
  --spider IT \
  --content \
  --pattern '(?i)(pass|pwd|cred|secret|key)' \
  --depth 5

nxc smb 10.129.234.121 \
  -u mendres \
  -p 'Inlanefreight2025!' \
  --spider IT \
  --content \
  --pattern '(?i)(password|passwd|pwd|credential)' \
  --depth 6 \
  --log nxc_it_share_enum.log

nxc smb 10.129.234.121 \
  -u mendres \
  -p 'Inlanefreight2025!' \
  --spider IT \
  --pattern '(?i)(pass|cred)' \
  --depth 3
















